<Window x:Class="MarvelFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <Style x:Name="buttonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,0,10,0"></Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="5*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--Background-->
        <Rectangle Fill="#2c2f33" Grid.ColumnSpan="3" Grid.RowSpan="4"></Rectangle>
        <!--Titre-->
        <TextBlock Foreground="Orange" Grid.Column="1" Grid.Row="0" TextWrapping="Wrap" >

        </TextBlock>
        <!--Logo Menu -->
        <Image Source="..\Images\marvelLogo.png" Grid.Column="1"  Margin="10,5" />

        <!--Menu utilisateur-->
        <TextBlock Foreground="Orange" Grid.Column="2"></TextBlock>

        <Image Source="..\Images\pdp2.png" Grid.Column="2" Margin="128,5,6,5" />

        <!--Bar de navigation-->
        <Button Grid.Column="0" Grid.Row="1">Personnages</Button>
        <Button Grid.Column="1" Grid.Row="1">Films</Button>
        <Button Grid.Column="2" Grid.Row="1">Communauté</Button>
        <!--Footer-->
        <TextBlock Background="Gray" Foreground="Orange" Grid.ColumnSpan="3" Grid.Row="3" >
                        This is a TextBlock control<LineBreak />
                        with multiple lines of text.
        </TextBlock>


    </Grid>
</Window>

            <TextBlock Height="22.667" Margin="226,58.333,130.333,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </Grid>
        <Grid x:Name="Fiche" Margin="0,87,0,0">
            <Grid x:Name="PosterImage" HorizontalAlignment="Left" Margin="0,0,0,65.333" Width="122.667">
                <Image x:Name="affichetest_jpg" Margin="10,7.333,12,10" Source="pack://application:,,,/MarvelFlow.App;component/Images/affichetest.jpg" Stretch="Fill"/>
